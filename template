#!/usr/bin/env bash

# ??
#
# Author: ?

f=3 b=4

for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "\e[${!j}${i}m"
  done
done

for i in {0..7}; do
    printf -v g$i %b "\e[9${i}m"
done

# bold
bd=$'\e[1m'

# reset color
rt=$'\e[0m'

# invert color (swaps positive and negative spaces)
iv=$'\e[7m'

### SYMBOLS ###
# BLOCKS:
# full: â–ˆ â–“ â–’ â–‘
# left (descending size): â–‰ â–Š â–‹ â–Œ â– â– â–
# right: â–  (half)â–•  (1/8)
# upper: â–€  (half)  â–” (1/8)
# lower (descending size): â–‡ â–† â–… â–„ â–ƒ â–‚ â–
# quadrants: â–– (lower left) â–—  (lower right) â–˜ (upper left) â–  (upper right)

# LINES:
# horizontal: â–¬ â€” â–¬  â€• â€— â€¦ Ë âšŠ âšŒ âš	âš	âš
# slanted:        â„ â•± â•² â’
# wavy: Ë˜ â â“ â” â€¿ ğŸœ³ ğŸ  ğŸ„ ğŸ ğŸŸ ğŸ£ âº âº€ âš âšŸ â™¨ â— â—¡ â—œâ—â—â—Ÿâ˜¡

# SHAPES:
# circular: â— â— â—‰ â—¯ â—  â—¡    â€¢ â— â—‘ â—’ â—“ Î˜ ÎŸ Í» Í¼ Í½ Ñº Ëš âš¬ âš­	âš® âš¯ âš†	âš‡ âšˆ	âš‰
# triangular: â–² â–¼ â—„ â–º â—€ â€£ â—¢ â—¤ â—¥	â—¤â—¢   â—­ â—®	â—º Î” ğŸœ 	ğŸœ‚ â›¬ ğŸœƒ 	ğŸœ„ 	ğŸœ… â‚ â€¸ â€¹ 	â€º
# quadilaterals: â–  â–¨ â–¤ â–¥ â–© â™¢ â™¦ â›¶ â–° ğŸ€† ğŸ€« â˜
# stars: â˜… â˜† â›¤ â›¥ â›¦ â›§

# BOXES:
# double border: â• â•‘ â•” â•¦ â•— â•š â•© â•
# single border: âˆŸ â”Œ â”â”” â”˜
# branches: Ë¦ Ë§ Ë¨ Ëª Ë«
#
# dots: âš â˜ â™ â› â â â– â£°  see https://en.wikipedia.org/wiki/Braille_Patterns

### COLORS ###
# foreground:
# f0=black, f1=red, f2=green, f3=yellow, f4=blue
# f5=magenta, f6=cyan, f7=white
#
# g0=bright black, g1=bright red, g2=bright green, g3=bright yellow,
# g4=bright blue, g5=bright magneta, g6=bright cyan, g7=bright white
#
# background:
# b0=black, b1=red, b2=green, b3=yellow, b4=blue
# b5=magenta, b6=cyan, b7=white

# this is a 10x20 grid of blocks to start you off
cat << EOF

$f7â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ
$f7â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ
